@model IEnumerable<Datos.Datos.DetallePedido>

@{
    ViewBag.Title = "Index";
    string madre = "";
    if (ViewBag.Message != null && ViewBag.Message != "")
    {
        madre = ViewBag.Message;
    }
}

<h2>Index</h2>
<h2>@madre</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pedido.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.ProductName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.ProductName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderDetailID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderDetailID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderDetailID })
            </td>
        </tr>
    }

</table>
